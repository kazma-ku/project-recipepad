<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_trending_feed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Recipe Image with rounded corners -->
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageView_item_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/recipe_thumbnail"
                android:scaleType="centerCrop"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@drawable/food_pasta" />
        </androidx.cardview.widget.CardView>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/textView_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Classic Spaghetti Carbonara" />

            <!-- Description -->
            <TextView
                android:id="@+id/textView_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                tools:ignore="TextContrastCheck"
                tools:text="A creamy Italian pasta dish" />

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Likes -->
                <ImageView
                    android:id="@+id/imageView_trending_thumbsup"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_baseline_thumb_up_green24"
                    app:tint="@color/like_green"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/textView_item_likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    tools:ignore="TextContrastCheck"
                    tools:text="42" />

                <!-- Dislikes -->
                <ImageView
                    android:id="@+id/imageView_trending_thumbsdown"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_baseline_thumb_down_red24"
                    app:tint="@color/dislike_red" />

                <TextView
                    android:id="@+id/textView_item_dislikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    tools:text="3" />

                <!-- Comments -->
                <ImageView
                    android:id="@+id/imageView_trending_comment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_baseline_chat_24"
                    app:tint="@color/text_hint" />

                <TextView
                    android:id="@+id/textView_item_commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    tools:ignore="TextContrastCheck"
                    tools:text="12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
