<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF8F7"
    android:onClick="swapToLogin"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/textView_signup_recipepad"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginVertical="40dp"
        android:background="@color/button_blue"
        android:gravity="center"
        android:text="@string/recipepad"
        android:textSize="34sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editText_signup_username"
        android:layout_width="361dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:backgroundTint="#AEAEAE"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="text"
        android:textColor="#AEAEAE" />

    <EditText
        android:id="@+id/editText_signup_email"
        android:layout_width="361dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:backgroundTint="#AEAEAE"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="#AEAEAE" />

    <EditText
        android:id="@+id/editText_signup_password"
        android:layout_width="361dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:backgroundTint="#AEAEAE"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="text"
        android:textColor="#AEAEAE" />

    <Button
        android:id="@+id/button_signup_signup"
        android:layout_width="357dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:onClick="createUser"
        android:text="@string/sign_up"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_signup_alreadyhaveaccount"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/already_have_an_account_click_here"
        android:textColor="#1DA2BF" />
</LinearLayout>