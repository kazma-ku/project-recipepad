<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF8F7"
    android:orientation="vertical"
    tools:context=".RecipeActivity">

    <TextView
        android:id="@+id/textView_recipe_recipename"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="@string/recipe_name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_recipe_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_thumb_up_green24" />

            <TextView
                android:id="@+id/textView_recipe_likecount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_recipe_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_thumb_down_red24" />

            <TextView
                android:id="@+id/textView_recipe_dislikecount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_recipe_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_chat_24" />

            <TextView
                android:id="@+id/textView_recipe_commentscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_recipe_foodphotos"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:srcCompat="@drawable/ic_baseline_image_24" />

    <Button
        android:id="@+id/button_recipe_followuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/follow_this_user" />

    <TextView
        android:id="@+id/textView_recipe_descriptiontitle"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="2dp"
        android:text="@string/dish_description"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_recipe_description"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="15dp" />

    <TextView
        android:id="@+id/textView_recipe_ingredients2"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="2dp"
        android:text="@string/ingredients_recipe"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_recipe_ingredients"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="15dp" />

    <TextView
        android:id="@+id/textView_recipe_stepstitle"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="2dp"
        android:text="@string/steps_recipe"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_recipe_steps"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText_recipe_addcomment"
            android:layout_width="302dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="@string/add_a_comment"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingStart="10dp"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button_recipe_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/add"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_recipe_totalcomments"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_recipe"
        android:layout_width="match_parent"
        android:layout_height="203dp" />

</LinearLayout>