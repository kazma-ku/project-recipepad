<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF8F7"
    android:orientation="vertical"
    tools:context=".RecipeActivity">

    <TextView
        android:id="@+id/textView_recipe_recipename"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="Recipe Name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_recipe_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_thumb_up_24" />

            <TextView
                android:id="@+id/textView_recipe_likecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="# Likes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_recipe_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_thumb_down_24" />

            <TextView
                android:id="@+id/textView_recipe_dislikecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="# Dislikes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_recipe_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_chat_24" />

            <TextView
                android:id="@+id/textView_recipe_commentscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="# Comments" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_recipe_uploaddate"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:gravity="right"
            android:text="TextView" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_recipe_foodphotos"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:srcCompat="@drawable/ic_baseline_image_24" />

    <TextView
        android:id="@+id/textView_recipe_description"
        android:layout_width="357dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:text="Dish Description" />

    <TextView
        android:id="@+id/textView_recipe_ingredients"
        android:layout_width="358dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:text="Ingredients" />

    <TextView
        android:id="@+id/textView_recipe_steps"
        android:layout_width="359dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:text="Steps" />

    <EditText
        android:id="@+id/editText_recipe_addcomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Add a comment..."
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textView_recipe_totalcomments"
        android:layout_width="352dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:text="# Comments" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_recipe"
        android:layout_width="match_parent"
        android:layout_height="206dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_bottomnav" />
</LinearLayout>